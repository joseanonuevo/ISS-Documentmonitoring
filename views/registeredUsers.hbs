<script>
  function validate(){
        var t = document.getElementById("newpassword1").value;
        var te = document.getElementById("newpassword").value;
        
        if(t != te){
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: "Passwords doesn't match!",
          })
          return false;
        }else{
          return true;
        }

      }
</script>

<script>
    function verifyEmail() {
        var num = document.getElementById("addAcc-email").value;
        var num1 = num.length;
        var num2 = num1 - 10;
        var result = num.slice(num2);

        if (num == "ust.edu.ph") {
            Swal.fire({
              icon: 'error',
              title: 'Invalid Input',
              text: "Please use a UST email",
            })
            return false;
        } else if (num1 < 10) {
            Swal.fire({
              icon: 'error',
              title: 'Invalid Input',
              text: "Please use a UST email",
            })          
            return false;
        } else if (result != "ust.edu.ph") {
            Swal.fire({
              icon: 'error',
              title: 'Invalid Input',
              text: "Please use a UST email",
            })
            return false;
        } else {
            return true;
        }
    }
</script>

